# ===============================================
# CONFIGURACIÓN DE ENTORNO - STARTER NESTJS
# ===============================================
# Copia este archivo a .env y configura los valores

# ===============================================
# APLICACIÓN
# ===============================================
NODE_ENV=development
PORT=3000
APP_NAME="Master TypeScript API"
APP_VERSION=2.0.0

# ===============================================
# BASE DE DATOS (PostgreSQL)
# ===============================================
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=master_typescript_db
DB_SYNCHRONIZE=true
DB_LOGGING=true

# ===============================================
# JWT / AUTENTICACIÓN
# ===============================================
JWT_SECRET=your-super-secret-key-change-this-in-production
JWT_EXPIRATION=1d
JWT_REFRESH_SECRET=your-refresh-secret-key
JWT_REFRESH_EXPIRATION=7d

# ===============================================
# CORS
# ===============================================
CORS_ORIGIN=http://localhost:4200
CORS_CREDENTIALS=true

# ===============================================
# RATE LIMITING
# ===============================================
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# ===============================================
# LOGGING
# ===============================================
LOG_LEVEL=debug
LOG_FILE_PATH=./logs

# ===============================================
# SWAGGER / DOCUMENTACIÓN
# ===============================================
SWAGGER_ENABLED=true
SWAGGER_PATH=api/docs
SWAGGER_TITLE="Master TypeScript API"
SWAGGER_DESCRIPTION="API production-ready con NestJS + TypeScript"
SWAGGER_VERSION=2.0.0
